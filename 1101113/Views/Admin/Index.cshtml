@model _1101113.Models.AdminViewModels.IndexViewModel
<div class="container-fluid">
    <h1 class="mt-4">Dashboard</h1>
    <ol class="breadcrumb mb-4" >
        <li class="breadcrumb-item active">Dashboard</li>
    </ol>
</div>
<div class="row">
    @foreach (var post in Model.Posts)
            {
                <div class="col-xl-3 col-md-6 mb-4">
                    <div class="card border-0 shadow">
                        <img src="/UserFiles/Posts/@post.id/HeaderImage.jpg" class="card-img-top" />
                        <div class="card-body">
                            <div class="row" style="margin: 0px auto 10px 0px">
                                <div><h5 class="card-title mb-0">@post.Title</h5></div>
                                <div style="position: relative;">
                                    <div class="icon-wrapper" style="position: absolute; top: 50%; right: 10px; transform: translateY(-50%);">
                                        <i class="fas @(post.published ? "fa-eye" : "fa-eye-slash")"
                                           style="color: @(post.published ? "deepskyblue" : "orangered"); font-size: 20px;"></i>
                                    </div>
                                </div>

                            </div>
                            <div class="row ml-0">
                                <div><i class="fas fa-calendar-alt" style="color: gray"></i></div>
                                <p class="text-muted ml-3 mb-0">Last updated on: @post.UpdatedOn.ToString()</p>
                            </div>
                            <div class="row ml-0" style="bottom: 0;">
                                <div><i class="fas fa-comment" style="color:gray"></i></div>
                                <p class="text-muted ml-3 mb-0">@post.Comments.Count() comments</p>
                            </div>
                        </div>
                        <div class="card-footer">
                            <div class="row">
                                <div class="col">
                                    <a asp-controller="Home" asp-action="Post" asp-route-id="@post.id" class="btn btn-primary">
                                        <i class="fa fa-arrow-circle-right"></i> View
                                    </a>
                                </div>
                                <div class="col">
                                    <a asp-controller="Post" asp-action="Edit" asp-route-id="@post.id" class="btn btn-primary">
                                        <i class="fa-regular fa-pen-to-square"></i> Edit
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }

</div>