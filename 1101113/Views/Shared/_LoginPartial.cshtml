@using Microsoft.AspNetCore.Identity
@using Blog.Data.Models
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item d-flex align-items-center">
        <a class="nav-link px-lg-3 py-3 py-lg-4" asp-controller="Author" asp-action="Index" >Hello @((await UserManager.GetUserAsync(User)).FirstName)!</a>
    </li>
    <form class="form-inline d-flex align-items-center" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
        <button type="submit" class="nav-link btn btn-link">Logout</button>
    </form>
}
else
{
    <li class="nav-item d-flex align-items-center">
        <a class="nav-link px-lg-3 py-3 py-lg-4" asp-area="Identity" asp-page="/Account/Register">Register</a>
    </li>
    <li class="nav-item d-flex align-items-center">
        <a class="nav-link px-lg-3 py-3 py-lg-4" asp-area="Identity" asp-page="/Account/Login">Login</a>
    </li>
}
